	height 40px
	font-family museo500
	padding-left 10px
	font-size 15px
	background-color transparent
	border-color black
}
select > option {
	font-family museo500

}

.detail-div h4{
	display:inline-block;
	width:140px;
	margin-left: 30px;
	margin-bottom 25px
